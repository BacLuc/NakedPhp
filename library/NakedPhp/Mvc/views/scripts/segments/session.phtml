<?php
$labels = array();
foreach ($this->session as $index => $object) {
    $url = $this->url(array('action' => 'view', 'type' => 'entity', 'object' => $index));
    $editUrl = $this->url(array('action' => 'edit', 'type' => 'entity', 'object' => $index));
    $class = $object->getClassName();
    $this->iconLoader($class);
    $labels[] = "<dt class=\"icon $class\"><a href=\"$url\">$object</a></dt>
    <dd class=\"button edit\"><a href=\"$editUrl\">(edit)</a></dd>
    ";
}
if ($labels) {
    echo "<dl>\n" . implode('', $labels) . "</dl>\n";
}
